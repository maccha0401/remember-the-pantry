<header class="navbar navbar-expand-lg bg-light">
  <div class="header-logo">
    <%= link_to "Remember The Pantry", root_path, class:"navbar-brand", id:"logo" %>
  </div>
  <nav class="navbar navbar-expand-sm bg-light">
    <% if logged_in? %>
      <ul class="navbar-nav">
        <li class ="nav-item"><%= link_to "Home", root_path, class:"nav-link" %></li>
        <li class ="nav-item"><%= link_to "Users", users_path, class:"nav-link" %></li>
        <li class ="nav-item"><%= link_to "foods", foods_path, class:"nav-link" %></li>
        <li class ="nav-item"><%= link_to "recipes", recipes_path, class:"nav-link" %></li>
        <li class ="nav-item"><%= link_to "can_be_made", can_be_made_recipes_path, class:"nav-link" %></li>
        <li class ="nav-item"><%= link_to "a_little_more", a_little_more_recipes_path, class:"nav-link" %></li>
      </ul>
      <%= current_user.name %>
      <ul class="navbar-nav">
        <li class ="nav-item"><%= link_to "Log out", logout_path, method: :delete, class:"nav-link" %></li>
      </ul>
    <% else %>
      <li class ="nav-item"><%= link_to "Log in", login_path, class:"nav-link" %></li>
    <% end %>
  </nav>
</header>
