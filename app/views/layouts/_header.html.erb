<header class="navbar navbar-expand-lg bg-light">
  <div class="header-logo">
    <%= link_to "Remember The Pantry", root_path, class:"navbar-brand", id:"logo" %>
  </div>
  <nav class="navbar navbar-expand-sm bg-light">
    <% if logged_in? %>
      <ul class="navbar-nav">
        <li class ="nav-item"><%= link_to "マイパントリー", root_path, class:"nav-link" %></li>
        <li class ="nav-item"><%= link_to "食材追加", foods_path, class:"nav-link" %></li>
        <li class ="nav-item"><%= link_to "レシピ", recipes_path, class:"nav-link" %></li>
        <li class ="nav-item"><%= link_to "つくれる", can_be_made_recipes_path, class:"nav-link" %></li>
        <li class ="nav-item"><%= link_to "もう少しでつくれる", a_little_more_recipes_path, class:"nav-link" %></li>
      </ul>
      <div class="btn-group">
        <button type="button" class="btn btn-secondary dropdown-toggle" id="dropdownMenuButton"
          data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <%= fa_icon("user", class: "fa-fw") %>
        </button>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
          <%= link_to current_user.name, current_user, class:"nav-link dropdown-item" %>
          <div class="dropdown-divider"></div>
          <%= link_to "Log out", logout_path, method: :delete, class:"nav-link dropdown-item" %>
        </div>
      </div>
    <% else %>
      <li class ="nav-item"><%= link_to "Log in", login_path, class:"nav-link" %></li>
    <% end %>
  </nav>
</header>
