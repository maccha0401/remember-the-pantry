<% provide(:title, "ログイン") %>

<h1>ログイン</h1>

<%= form_with(scope: :session, url: login_path, local:true) do |f| %>

  <%= f.email_field :email, class: 'form-control', placeholder: 'メールアドレス' %>
  <%= f.password_field :password, class: 'form-control', placeholder: 'パスワード' %>

  <%= f.submit "ログイン", class: "" %>
<% end %>

<%= link_to "アカウント作成", signup_path %>
