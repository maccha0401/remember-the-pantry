<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @recipe.name %>
</p>

<% counta = 1 %>
<% @recipe.ingredients.each do |ingredient| %>
  <p>
    <strong>Ingredient<%= counta %>:</strong>
    <%= ingredient.food.name %>
  </p>
  <% counta += 1 %>
<% end %>


<%= link_to 'Edit', edit_recipe_path(@recipe) %> |
<%= link_to 'Back', recipes_path %>
